<%= form_with(model: course, local: true) do |form| %>
  <% if course.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
      <% course.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title, class:"text-light" %>
    <%= form.text_field :title, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :course_id, class:"text-light" %>
    <%= form.text_field :course_id, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :instructor, class:"text-light" %>
    <%= form.text_field :instructor, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :description, class:"text-light" %>
    <%= form.text_field :description, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :room_id, class:"text-light" %>
    <%= form.text_field :room_id, class:"form-control" %>
  </div>

  <div class="form-group row">
    <%= form.label :monday, class:"form-check-label" %>
    <%= check_box :week, :monday, {}, true, false %>

    <%= form.label :tuesday, class:"form-check-label" %>
    <%= check_box :week, :tuesday, {}, true, false %>

    <%= form.label :wednesday, class:"form-check-label" %>
    <%= check_box :week, :wednesday, {}, true, false %>

    <%= form.label :thursday, class:"form-check-label" %>
    <%= check_box :week, :thursday, {}, true, false %>

    <%= form.label :friday, class:"form-check-label" %>
    <%= check_box :week, :friday, {}, true, false %>

    <%= form.label :saturday, class:"form-check-label" %>
    <%= check_box :week, :saturday, {}, true, false %>

    <%= form.label :sunday, class:"form-check-label" %>
    <%= check_box :week, :sunday, {}, true, false %>
  </div>

  <div class="form-row">
    <div class="col-md-6">
      <%= label :time_block, :start_time, class:"text-light" %>
      <%= text_field :time_block, :start_time, class:"form-control" %>
    </div>

    <div class="col-md-6">
      <%= label :time_block, :end_time, class:"text-light" %>
      <%= text_field :time_block, :end_time, class:"form-control" %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit class:"btn btn-primary" %>
  </div>
<% end %>
