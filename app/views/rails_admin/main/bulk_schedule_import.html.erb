			<td>
				<%= form_with url: upload_records_path, id: "upload-form" do |f| %>
					<div class="form-group">
						<%= f.file_field :schedule_sheet, id: "upload-field", class: "text-light" %>
						<%= f.submit "Upload Rooms", class: "submit" %>
					</div>
				<% end %>
			</td>
		</tr>

		<tr class="odd">
			<td>
				<span class="show">Courses</span>
			</td>

			<td>
				<%= link_to 'Download Courses', download_records_path, class: "btn btn-default border rounded text-light" %>
			</td>

			<td>
				<%= form_with url: upload_records_path, id: "upload-form" do |f| %>
					<div class="form-group">
						<%= f.file_field :schedule_sheet, id: "upload-field", class: "text-light" %>
						<%= f.submit "Upload Courses", class: "submit" %>
					</div>
				<% end %>
			</td>
		</tr>

		<tr class="even">
			<td>
				<span class="show">Display Cases</span>
			</td>

			<td>
				<%= link_to 'Download Display Cases', download_records_path, class: "btn btn-default border rounded text-light" %>
			</td>

