<div class="container">
	<h1 class="text-center">
		<%= @room.name %>
	</h1>

	<h2><%= @room.title %></h2>
	<p><%= @room.description %></p>
	<%= render_svg(@room.id) %>

	<h1 class="text-center">Schedule</h1>

	<div class="cd-schedule loading">
	  <div class="timeline">
	    <ul>
	      <li><span>09:00</span></li>
	      <li><span>09:30</span></li>
	      <li><span>10:00</span></li>
	      <li><span>10:30</span></li>
	      <li><span>11:00</span></li>
	      <li><span>11:30</span></li>
	      <li><span>12:00</span></li>
	      <li><span>12:30</span></li>
	      <li><span>13:00</span></li>
	      <li><span>13:30</span></li>
	      <li><span>14:00</span></li>
	      <li><span>14:30</span></li>
	      <li><span>15:00</span></li>
	      <li><span>15:30</span></li>
	      <li><span>16:00</span></li>
	      <li><span>16:30</span></li>
	      <li><span>17:00</span></li>
	      <li><span>17:30</span></li>
	      <li><span>18:00</span></li>
	    </ul>
	  </div> <!-- .timeline -->

	  <div class="events">
	    <ul class="wrap">
	      <% @week.each do |day, blocks| %>
	        <li class="events-group">
	          <div class="top-info"><span><%= day %></span></div>
	          <ul>
	            <% blocks.each do |course_block| %>
	              <li class="single-event" data-start="<%= course_block[0].start_time %>" data-end="<%= course_block[0].end_time %>"  data-content="event-rowing-workout" data-event="event-2">
	                <a href="#0">
	                  <em class="event-name"><%= course_block[1].title %></em>
	                </a>
	              </li>
	            <%end%>
	          </ul>
	        </li>
	      <%end%>
	    </ul>
	  </div>

	  <div class="event-modal">
	    <header class="header">
	      <div class="content">
	        <span class="event-date"></span>
	        <h3 class="event-name"></h3>
	      </div>

	      <div class="header-bg"></div>
	    </header>

	    <div class="body">
	      <div class="event-info"></div>
	      <div class="body-bg"></div>
	    </div>

	    <a href="#0" class="close">Close</a>
	  </div>

	  <div class="cover-layer"></div>
	</div> <!-- .cd-schedule -->
	<%= link_to 'Edit', edit_room_path(@room), class:"btn btn-primary" %> |
	<%= link_to 'Back', rooms_path, class:"btn btn-primary" %>
</div>